class Solution {
    public int maxSatisfied(int[] customers, int[] grumpy, int minutes
        int k = minutes;
        int maxsum=0;
        int satisfied=0;
        int insum=0;
        //step1 find the satisfied customers
        for(int i =0;i<customers.length;i++){
            if(grumpy[i]==0) satisfied+=customers[i];
        }
        //step2 calculate intial window sum 
        for(int i =0; i< k;i++){
            if(grumpy[i]==1)  insum+=customers[i];
        }
        maxsum=insum;
        //step 3 find maximum no satisifed customers in the window 
        int sum=0;
        for(int i=k;i<customers.length;i++){
            if(grumpy[i]==1){
                insum +=customers[i];
            }
            if(grumpy[i-k]==1){
                insum-=customers[i-k];
            }
            maxsum=Math.max(maxsum,insum);
        }
        System.out.println(maxsum);
        System.out.println(satisfied);
        return maxsum+satisfied;

    }
}



