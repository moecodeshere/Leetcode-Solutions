class Solution {
    public int canCompleteCircuit(int[] gas, int[] cost) {
        int total = 0, tank = 0, start = 0;int n=cost.length;
        for (int i = 0; i < n; i++) {
            int gain = gas[i] - cost[i];
            total += gain;
            tank += gain;

            if (tank < 0) {
                start = i + 1; // reset window
                tank = 0;
            }
        }
        return total >= 0 ? start : -1;
    }
}
