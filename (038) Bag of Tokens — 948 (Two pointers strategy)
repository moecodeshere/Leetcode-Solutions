class Solution {
    public int bagOfTokensScore(int[] tokens, int power) {
        Arrays.sort(tokens);
        int l =0 ;
        int maxscore=0;
        int score=0;
        int h=tokens.length-1;
        while(l<=h){
            if(power>=tokens[l]){
                score++;
                power-=tokens[l];
                l++;
                maxscore=Math.max(maxscore,score);
            }
            else if(score>0){
                power+=tokens[h];
                score--;
                h--;
                maxscore=Math.max(maxscore,score);
            }
            else break;
        }
        return maxscore;
    }
}
