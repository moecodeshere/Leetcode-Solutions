class Solution {
    public int longestSubarray(int[] nums) {
        int left = 0;
        int zeroCount = 0;
        int maxLength = 0;
        
        for (int right = 0; right < nums.length; right++) {
            // Expand window: count zeros
            if (nums[right] == 0) {
                zeroCount++;
            }
            
            // Shrink window if we have more than one zero
            while (zeroCount > 1) {
                if (nums[left] == 0) {
                    zeroCount--;
                }
                left++;
            }
            
            // Window size minus 1 (must delete one element)
            maxLength = Math.max(maxLength, right - left);
        }
        
        return maxLength;
    }
}
