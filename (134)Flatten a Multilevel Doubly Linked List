/*
// Definition for a Node.
class Node {
    public int val;
    public Node prev;
    public Node next;
    public Node child;
};
*/

class Solution {
    public Node flatten(Node head) {
        if(head==null){
            return head;
        }
        flattener(head);
        return head;
    }
    private Node flattener(Node head){
        Node curr=head;
        Node tail=curr;
        while(curr!=null){
            Node next=curr.next;

            if(curr.child!=null){
                Node childtail=flattener(curr.child);

                curr.next=curr.child;
                curr.child.prev=curr;

                childtail.next=next;
                if(next!=null){
                    next.prev=childtail;
                }
                curr.child=null;
                tail=childtail;

            }
            else{
                tail=curr;
            }
            curr=next;
        }
        return tail;
    }
}
