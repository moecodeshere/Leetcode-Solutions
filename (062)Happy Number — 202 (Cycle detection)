class Solution {
    public boolean isHappy(int n) {
        Set<Integer> seen = new HashSet<>();
        while(n!=1 && !seen.contains(n)){
            seen.add(n);
            n=nextnum(n);
        }
        return n==1;
        
    }
    private int nextnum(int n){
        int total= 0;
        while(n>0){
            int dig=n%10;
            total+=dig*dig;
            n/=10;
        }
        return total;
    }
}
