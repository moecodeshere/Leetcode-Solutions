class Solution {
    int newstone;
    public int lastStoneWeight(int[] stones) {
        PriorityQueue<Integer> heap=new PriorityQueue<>(Collections.reverseOrder());
        for(int stone : stones){
            heap.offer(stone);
        }
        while(heap.size()!=1){
            int stone1=heap.poll();
            int stone2=heap.poll();
                newstone=stone1-stone2;
            heap.offer(newstone);
            
        }
        return heap.peek();
    }
}
