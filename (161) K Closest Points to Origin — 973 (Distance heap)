class Solution {
    public int[][] kClosest(int[][] points, int k) {
        List<int[]> list = new ArrayList<>();
        PriorityQueue<int[]> heap = new PriorityQueue<>(
            (a, b) -> (a[0]*a[0] + a[1]*a[1]) - (b[0]*b[0] + b[1]*b[1])
        );
        for (int[] point : points) {
            heap.offer(point);
        }
        for (int i = 0; i < k; i++) {
            list.add(heap.poll());
        }
        return list.toArray(new int[0][]);
    }
}
