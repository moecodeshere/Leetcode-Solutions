class Solution {
    public ListNode partition(ListNode head, int x) {
        ListNode smallhead = new ListNode(0);
        ListNode bighead = new ListNode(0);
        
        ListNode small = smallhead;
        ListNode big = bighead;
        ListNode curr = head;
        
        while(curr != null) {
            if(curr.val < x) {
                small.next = curr;
                small = small.next;
            } else {
                big.next = curr;
                big = big.next;
            }
            curr = curr.next;
        }
        
        small.next = bighead.next;
        big.next = null;
        
        return smallhead.next;
    }
}
