class Solution {
    public int pivotIndex(int[] nums) {
        
        int ls =0;int rs =0; int total =0;
        
        for(int num :nums){
            total +=num;}
        for(int i=0;i<nums.length;i++){
            
            rs = total - ls -nums[i] ;
            if(rs ==ls) return i;
            ls+=nums[i];
        }
        return -1;
    }
}
